<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_14"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="1111111111111111"
        android:id="@+id/find_title_name"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find_title_source"
        android:text="11111"
        android:textSize="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/find_title_name"
        android:textColor="#999999"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find_title_time"
        android:text="11111"
        android:textSize="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/find_title_source"
        android:layout_below="@id/find_title_name"
        android:textColor="#999999"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:textColor="#666666"
        android:layout_below="@id/find_title_time"
        android:layout_marginTop="@dimen/dp_10"></TextView>
</RelativeLayout>