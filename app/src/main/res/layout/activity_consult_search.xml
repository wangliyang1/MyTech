<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#CDC9C9"
    android:layout_height="match_parent"
    tools:context=".view.consult.ConsultSearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_40">
        <EditText
            android:layout_width="@dimen/dp_285"
            android:layout_height="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_12"
            android:hint="搜索文章"
            android:id="@+id/search_edit"
            android:paddingLeft="@dimen/dp_35"
            android:background="@drawable/bg_edittext"
            android:textSize="@dimen/dp_14"
            android:textColorHint="#666666"></EditText>
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/common_nav_btn_search_n_xxhdpi"
            android:layout_marginLeft="@dimen/dp_17"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:text="取消"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:id="@+id/search_cancel"></TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热搜词"
        android:textSize="@dimen/dp_12"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_12"></TextView>
    <cc.ibooker.zflowlayoutlib.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_flowlayout"
        android:layout_marginLeft="@dimen/dp_12">
    </cc.ibooker.zflowlayoutlib.FlowLayout>
</LinearLayout>